@import 'nib'
@import 'url('http://fonts.googleapis.com/css?family=Quicksand')

/* css reset provided by nib */
global-reset()

main-color = #fa5b4b
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 300px

  p
    margin-bottom 20px

.left-side
  float left
  width 200px
  p
    line-height 1.8

.right-side
  float right
  width 200px
  p
    line-height 1.8

footer
  width 500pm
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 1px
  font-size 13x
